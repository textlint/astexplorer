{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "enabled": false
    },
    {
      "groupName": "textlint",
      "matchPackagePatterns": [
        "textlint",
        "^@textlint/",
        "textlint-plugin-html"
      ],
      "enabled": true,
      "automerge": true
    }
  ]
}
